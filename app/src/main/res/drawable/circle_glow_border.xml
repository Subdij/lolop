<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bordure extérieure plus sombre pour l'effet de profondeur -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="6dp"
                android:color="#785A28" />
        </shape>
    </item>
    <!-- Bordure principale dorée -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/lol_gold" />
        </shape>
    </item>
    <!-- Reflet brillant sur le dessus pour le volume -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#F0E6D2" />
        </shape>
    </item>
</layer-list>