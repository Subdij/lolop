<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lol_blue_deep"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- View to force height so Logo and Toolbar fit without overlapping -->
            <View
                android:layout_width="match_parent"
                android:layout_height="380dp" />

            <!-- Barre Sticky (Positioned at bottom, pinned) -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/stickyToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:id="@+id/searchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lol_blue_deep"
                    android:orientation="vertical"
                    android:paddingTop="130dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp">

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/search_bar_background"
                            android:hint="@string/search_champion_hint"
                            android:padding="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/lol_silver"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionDone" />

                        <ImageView
                            android:id="@+id/ivMic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_mic_inactive"
                            android:background="@drawable/search_bar_background"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/roleFilterContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fillViewport="true"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <ImageView
                                android:id="@+id/ivRoleTop"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/role_border"
                                android:padding="9dp"
                                android:src="@drawable/role_top" />

                            <ImageView
                                android:id="@+id/ivRoleJungle"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/role_border"
                                android:padding="9dp"
                                android:src="@drawable/role_jungle" />

                            <ImageView
                                android:id="@+id/ivRoleMid"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/role_border"
                                android:padding="9dp"
                                android:src="@drawable/role_mid" />

                            <ImageView
                                android:id="@+id/ivRoleBot"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/role_border"
                                android:padding="9dp"
                                android:src="@drawable/role_bot" />

                            <ImageView
                                android:id="@+id/ivRoleSupport"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/role_border"
                                android:padding="9dp"
                                android:src="@drawable/role_support" />

                            <ImageView
                                android:id="@+id/ivRoleFavorites"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/role_border"
                                android:padding="9dp"
                                android:src="@drawable/ic_star_filled"
                                app:tint="@color/lol_gold" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogoLarge"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="top|center_horizontal"
                android:paddingTop="60dp"
                android:paddingBottom="-80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:elevation="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnLangFr"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/flag_fr"
            android:scaleType="centerCrop"
            android:padding="2dp"
            app:strokeWidth="2.5dp"
            app:strokeColor="@color/lol_gold"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            android:clickable="true"
            android:focusable="true"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnLangEn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/flag_en"
            android:scaleType="centerCrop"
            android:padding="2dp"
            app:strokeWidth="2.5dp"
            app:strokeColor="@color/lol_gold"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChampions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="@dimen/champion_list_bottom_padding"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="@dimen/fading_edge_length"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottomNavigation"
        android:name="com.example.lolop.fragments.NavbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:layout="@layout/fragment_navbar" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>